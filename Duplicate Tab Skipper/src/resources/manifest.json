{
  "manifest_version": 2,
  "name": "Duplicate Tab Skipper Plus",
  "description": "This extension skips duplicate tabs and private instagram profiles",
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "action-popup.html",
    "default_title": "Duplicate Tab Skipper Plus"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.instagram.com/*"
      ],
      "js": [
        "content-script.js",
        "jquery-3.2.1.min.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "history",
    "tabs",
    "notifications"
  ]
}